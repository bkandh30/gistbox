{{define "nav"}}
<nav>
    <div>
        <a href='/'>Home</a>
        <a href='/about'>About</a>
        {{if .IsAuthenticated}}
            <a href='/gist/create'>Create Gist</a>
            <a href='/account/view'>Account</a>
        {{end}}
